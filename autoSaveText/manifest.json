{
    "name": "Autosave Text",
        "description": "Automatically save user text input after short timeout when user stops typing. Restore lost input via context menu.",
        "version": "1",
        "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "unlimitedStorage"],
        "background": {
        "scripts": [
            "autosave_bg.js",
            "toast.js"]
    },
        "commands": {
        "review-autosaves": {
            "suggested_key": {
                "default": "Alt+Shift+A"
//                ,                    "mac": "Alt+MacCtrl+A"
            },
                "description": "Send a 'review-autosaves' event to the extension"
        },
            "capture-tab": {
            "suggested_key": {
                "default": "Alt+Shift+C"
//                ,                    "mac": "Alt+MacCtrl+C"
            },
                "description": "Send a 'capture-tab' event to the extension"
        }
    },
        "content_scripts": [{
                   "all_frames": true,
        "matches": [
            "<all_urls>"],
            "js": [
            "autosave.js",
            "toast.js"],
            "css": [
            "autosave.css"]
    }],
        "options_page": "options.html",
        "manifest_version": 2
}