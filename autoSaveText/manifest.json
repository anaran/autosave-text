{
    "name": "Autosave Text",
        "description": "Automatically save user text input after short timeout when user stops typing. Restore lost input via context menu.",
        "version": "1",
        "permissions": [
        "activeTab",
        "https://plus.google.com/",
        "contextMenus",
        "storage",
        "unlimitedStorage"],
        "background": {
        "scripts": [
            "autosave_bg.js",
            "toast.js"]
    },
        "content_scripts": [{
//           "all_frames": true,
        "matches": [
            "<all_urls>"],
            "js": [
            "autosave.js",
            "toast.js"],
            "css": [
            "autosave.css"]
    }],
        "options_page": "options.html",
        "manifest_version": 2
}